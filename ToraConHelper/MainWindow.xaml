<ui:FluentWindow
    x:Class="ToraConHelper.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ToraConHelper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewModels="clr-namespace:ToraConHelper.ViewModels"
    xmlns:views="clr-namespace:ToraConHelper.Views"
    Title="トラコン ヘルパーアプリ(仮称)"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance viewmodels:MainWindowViewModel}"
    ExtendsContentIntoTitleBar="True"
    mc:Ignorable="d">
    <ui:FluentWindow.Resources>
        <SolidColorBrush x:Key="PrimaryAccentBrush" Color="{DynamicResource SystemAccentColorPrimary}"/>
        <DrawingImage x:Key="RunningOverlayIcon">
            <DrawingImage.Drawing>
                <DrawingGroup>
                    <DrawingGroup.Children>
                        <GeometryDrawing Geometry="F1 M 50,25L 0,0L 0,50L 50,25 Z" Brush="{DynamicResource PrimaryAccentBrush}"/>
                    </DrawingGroup.Children>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>
    </ui:FluentWindow.Resources>
    <ui:FluentWindow.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="taskbarItemInfo"/>
    </ui:FluentWindow.TaskbarItemInfo>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ui:TitleBar Title="{Binding RelativeSource={RelativeSource AncestorType=ui:FluentWindow}, Path=Title}">
            <ui:TitleBar.Style>
                <Style TargetType="ui:TitleBar" BasedOn="{StaticResource {x:Type ui:TitleBar}}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsRunning}" Value="True">
                            <Setter Property="Icon">
                                <Setter.Value>
                                    <ui:SymbolIcon Symbol="CaretRight24" Filled="True" Foreground="{DynamicResource PrimaryAccentBrush}" FontSize="28"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryAccentBrush}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=IsRunning}" Value="False">
                            <Setter Property="Icon">
                                <Setter.Value>
                                    <ui:ImageIcon Source="/icon.ico"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ui:TitleBar.Style>
        </ui:TitleBar>
        <!--  NavigationView が不要な1ページアプリなんだけど、作っておく  -->
        <ui:NavigationView
            x:Name="navigationView"
            Grid.Row="1"
            IsBackButtonVisible="Collapsed" 
            
            MenuItemsSource="{Binding Path=MainNavigationViewItems}"
            FooterMenuItemsSource="{Binding Path=FooterNavigationViewItems}"
            PaneDisplayMode="Left"
            IsPaneToggleVisible="True"
            OpenPaneLength="200"
            IsPaneOpen="False"/>
    </Grid>
</ui:FluentWindow>
