<Window
    x:Class="ToraConHelper.Installer.InstallerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ToraConHelper.Installer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    WindowStyle="ToolWindow"
    Title="ToraCon-Helper Telemetry DLL インストール"
    Width="800"
    Height="450"
    FontSize="14"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding .}" Grid.Row="0" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Button Content="プラグインを手動でコピー" x:Name="pluginFolderButton" Click="pluginFolderButton_Click"/>
            <Button Content="閉じる" x:Name="closeButton" Click="closeButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
