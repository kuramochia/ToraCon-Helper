<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net4.8</TargetFramework>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
		<useWindowsForms>true</useWindowsForms>
		<LangVersion>Latest</LangVersion>
		<ApplicationIcon>icon.ico</ApplicationIcon>
		<StartupObject>ToraConHelper.Program</StartupObject>
		<FileVersion>1.5.0.0</FileVersion>
		<ApplicationManifest>app.manifest</ApplicationManifest>
	</PropertyGroup>
	<ItemGroup>
		<None Remove="icon.ico" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.3.1" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
		<PackageReference Include="System.Text.Json" Version="8.0.4" />
		<PackageReference Include="WPF-UI" Version="3.0.5" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\CSharpLib\SCSSdkClient.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="System.Management" />
	</ItemGroup>

	<ItemGroup>
		<Resource Include="icon.ico" />
	</ItemGroup>

  <!-- Partial の .cs ファイルを纏めて表示 -->
  <ItemGroup>
    <Compile Update="ViewModels\ViewModel.*.cs">
      <DependentUpon>ViewModels\ViewModel.cs</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>
